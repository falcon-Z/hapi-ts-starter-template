{
    "name": "hapi-ts-starter-template",
    "version": "1.0.0",
    "description": "A boiler plate code for getting started with Hapi and Typescript",
    "main": "./src/app.ts",
    "scripts": {
        "dev:tsc": "tsc --watch -p .",
        "dev:serve": "nodemon -e js -w dist dist/app.js",
        "dev": "run-p dev:*",
        "test": "SET NODE_ENV='test' && mocha -r ts-node/register tests/**/*.test.ts",
        "lint": "eslint ./src/**/*.*"
    },
    "keywords": [
        "hapi",
        "typescript",
        "template",
        "starter",
        "boilerplate"
    ],
    "author": "sai madhan",
    "license": "ISC",
    "dependencies": {
        "@hapi/hapi": "^20.1.5"
    },
    "devDependencies": {
        "@types/chai": "^4.2.21",
        "@types/hapi__hapi": "^20.0.9",
        "@types/mocha": "^8.2.3",
        "@types/node": "^16.4.0",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "chai": "^4.3.4",
        "eslint": "^7.31.0",
        "eslint-config-google": "^0.14.0",
        "mocha": "^9.0.2",
        "nodemon": "^2.0.12",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    }
}